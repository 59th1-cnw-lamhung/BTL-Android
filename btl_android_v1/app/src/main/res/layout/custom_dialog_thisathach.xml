<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_17sdp"
    android:background="@drawable/back_bienbao"
    android:alpha="1"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/custom_title_thisathach"
        android:layout_width="332dp"
        android:layout_height="320dp"
        android:background="@drawable/back_bienbao"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_17sdp"
            android:text="Chọn hạng bài thi"
            android:textColor="#000"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bạn muốn làm bài thi hạng:"
            android:textColor="#000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:layout_marginTop="@dimen/_17sdp"
            android:background="#ccc1c1" />

        <Button
            android:id="@+id/bt_a121"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_dethi"
            android:text="A1, A2"
            android:textColor="#fff" />


        <Button
            android:id="@+id/bt_b121"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_dethi"
            android:text="B1, B2"
            android:textColor="#fff" />


        <Button
            android:id="@+id/bt_cancel1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_dethi"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>
</android.support.v7.widget.CardView>